<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tabel User Game</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Username</th>
          <th scope="col">Password</th>
          <th scope="col">Created At</th>
          <th scope="col">Action At</th>
        </tr>
      </thead>
      <tbody>
        <% usergames.forEach((usergame, index) => { %>
        <tr>
          <th scope="row"><%= index+1 %></th>
          <td><%= usergame.username %></td>
          <td><%= usergame.password %></td>
          <td><%= moment(usergame.createdAt).format('Do MMMM, YYYY') %></td>
          <td>
            <a
              href="/view/updateform/<% usergame.user_id %>"
              class="btn btn-warning"
              >Edit Data</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>
</html>
